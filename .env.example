# Local mode - skip auth and run completely offline (set to 'true' for local usage)
LOCAL_MODE=true

# Database (local SQLite)
DATABASE_URL=./data/health.db

# Supabase (for hosted auth)
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Cloudflare Turnstile (for bot protection in hosted mode)
# Get keys at https://dash.cloudflare.com/turnstile
PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Turso (for hosted database - optional, uncomment for production)
# TURSO_DATABASE_URL=libsql://your-db.turso.io
# TURSO_AUTH_TOKEN=your-turso-token

# AI Providers (for local mode - in hosted mode, users provide their own)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Garmin Service (for hosted mode - deploy python/ to Railway/Render)
GARMIN_SERVICE_URL=https://your-garmin-service.railway.app
GARMIN_SERVICE_API_KEY=your-secret-api-key
